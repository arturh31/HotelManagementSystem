@model HotelManagementSystem.Models.ShiftSchedule

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Shift Type
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShiftType)
        </dd>
        <dt class = "col-sm-2">
           From Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FromDate)
        </dd>
        <dt class = "col-sm-2">
           To Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ToDate)
        </dd
    </dl>
    
    <form asp-action="Deleted">
        <input type="hidden" asp-for="ShiftId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
