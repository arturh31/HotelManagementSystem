@model HotelManagementSystem.Models.ViewModels.RoomReservationViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Reservation number
        </dt>
        <dd class="col-sm-10">
            @Model.ReservationId
        </dd>
        <dt class="col-sm-2">
            Room number
        </dt>
        <dd class="col-sm-10">
            @Model.RoomNumber
        </dd>
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Model.StartDate
        </dd>
        <dt class="col-sm-2">
            EndDate
        </dt>
        <dd class="col-sm-10">
            @Model.EndDate
        </dd>
        <dt class="col-sm-2">
            Room Type
        </dt>
        <dd class="col-sm-10">
            @Model.RoomType
        </dd>
        <dt class="col-sm-2">
            Room Floor
        </dt>
        <dd class="col-sm-10">
            @Model.RoomFloor
        </dd>
        <dt class="col-sm-2">
            Guest Name
        </dt>
        <dd class="col-sm-10">
            @Model.GuestName
        </dd>
        <dt class="col-sm-2">
            Guest Phone Number
        </dt>
        <dd class="col-sm-10">
            @Model.GuestPhoneNumber
        </dd>
        <dt class="col-sm-2">
            Employee name
        </dt>
        <dd class="col-sm-10">
            @Model.EmployeeName
        </dd>

        <form asp-action="Deleted">
            <input type="hidden" asp-for="ReservationId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
</div>
