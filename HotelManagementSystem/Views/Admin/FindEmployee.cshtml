@{
    ViewData["Title"] = "Find Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center topPadding80">Find Employee</h1>

<p class="text-center">Type employee email</p>


<div class="row flex justify-content-center align-items-center">
    <div class="col-md-4">
        @using (Html.BeginForm("SearchEmpByEmail", "Admin", FormMethod.Post))
        {
            <input type="text" name="EmpEmail" class="form-control" />
            <div class="topPadding20 text-center">
                <button type="submit" class="btn btn-dark">Find <i class="fas fa-search"></i></button>
            </div>
        }
    </div>
</div>


