@model HotelManagementSystem.Models.Room

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Room Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomNumber)
        </dd>
        <dt class = "col-sm-2">
            Maximum amount of guests
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxGuests)
        </dd>
        <dt class = "col-sm-2">
            Room type
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomType)
        </dd>
        <dt class = "col-sm-2">
            Room floor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomFloor)
        </dd>
        <dt class = "col-sm-2">
            Room status
        </dt>
        <dd class="col-sm-10">
            @if (Model.FkRoomStatusId == 1)
            {
                <p class="text-success">Ready</p>
            }
            @if (Model.FkRoomStatusId == 2)
            {
                <p class="text-success">Ready</p>
            }
            @if (Model.FkRoomStatusId == 3)
            {
                <p class="text-warning">Pending...</p>
            }

        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.RoomId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
